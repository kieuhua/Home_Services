<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      
      <th>Phone</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <% if current_user.admin? %>
         <th>Id</th>
         <th>User Id</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% if current_user.admin? %>
    <% @profiles.each do |profile| %>
      <tr>       
        <td><%= profile.phone %></td>
        <td><%= profile.street %></td>
        <td><%= profile.city %></td>
        <td><%= profile.state %></td>
        <td><%= profile.zipcode %></td>
             
        <td><%= profile.id %></td>
        <td><%= profile.user_id %></td>
         
        <td><%= link_to 'Show', profile_path(profile) %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <%= link_to 'New Profile', new_profile_path %>
       </tr>
     <% end %>
   <% else %>
       <tr>       
         <td><%= current_user.profile.phone %></td>
         <td><%= current_user.profile.street %></td>
         <td><%= current_user.profile.city %></td>
         <td><%= current_user.profile.state %></td>
         <td><%= current_user.profile.zipcode %></td>
         
         <td><%= link_to 'Show', profile_path(current_user.profile) %></td>
         <td><%= link_to 'Edit', edit_profile_path(current_user.profile) %></td>
      </tr>
   <% end %>
  </tbody>
</table>

<br>
