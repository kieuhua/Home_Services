<div>
   <% @vendors.each do |vendor| %>  
	   <button class="btn btn-success" data-target="#button-<%= vendor.id %>" data-toggle="collapse" >
	      <%= vendor.company_name %>
	   </button>		 

		<div id="button-<%= vendor.id %>" class="collapse bg-primary text-light m-1">
	      <%= vendor.description %>
	   </div>		   
   <% end %>
</div>

 <% if current_user.admin? %>
<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Description</th>
      
     
      <th>Id</th>
      <th>User Id</th>    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td class="homeservice-cursive-font-120"><strong><%= vendor.company_name %></strong></td>
        <td><%= vendor.description %></td>             
        <td><%= vendor.id %>
        <td><%= vendor.user_id %>
        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path( vendor.user_id, vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>                      
    <% end %>
  </tbody>
</table>
<br>
  <%= link_to 'New vendor', new_user_vendor_path(current_user.id) %>
<br>
<% end %>
