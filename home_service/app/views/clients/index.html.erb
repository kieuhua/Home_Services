<p id="notice"><%= notice %></p>

<% if current_user.admin? || current_user.role == 1 %>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Credit card</th>
      
      <% if current_user.admin? %>
      <th>Id</th>
      <th>User Id</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.credit_card %></td>
        
        <% if current_user.admin? %>           
        <td><%= client.id %>
        <td><%= client.user_id %></td>
        <% end %>
        
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Client', new_user_client_path(current_user.id) %>
<br>
<% else %>
<h4>This is confidential information. Please click 'Home' to go back to the main page. </h4>
<%= link_to 'Home', categories_path %>

<% end %>
